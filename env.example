LAB_GATEWAY=192.168.1.1
LAB_DNS=8.8.8.8,8.8.4.4

# =============================================================================
# SERVICE IP ADDRESSES
# =============================================================================
MODBUS_SIMULATOR_IP=192.168.1.10
FUXA_IP=192.168.1.20
OPENPLC_IP=192.168.1.30
WIRESHARK_IP=192.168.1.40
GRAFANA_IP=192.168.1.50
PROMETHEUS_IP=192.168.1.60
INFLUXDB_IP=192.168.1.70
ELASTICSEARCH_IP=192.168.1.80
KIBANA_IP=192.168.1.90

# =============================================================================
# SERVICE PORTS
# =============================================================================
MODBUS_PORT=502
FUXA_PORT=1881
OPENPLC_WEB_PORT=8080
OPENPLC_MODBUS_PORT=5020
WIRESHARK_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090
NODE_EXPORTER_PORT=9100
INFLUXDB_PORT=8086
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# =============================================================================
# AUTHENTICATION
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123
INFLUXDB_ORG=ot-ics-lab
INFLUXDB_BUCKET=ot-ics-data

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_COMPOSE_PROJECT_NAME=ot-ics-attack
DOCKER_NETWORK_NAME=ot-ics-lab
DOCKER_SUBNET=192.168.1.0/24

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/lab.log
PROMETHEUS_RETENTION=15d
ELASTICSEARCH_HEAP_SIZE=1g

# =============================================================================
# ATTACK SIMULATION CONFIGURATION
# =============================================================================
ATTACK_TIMEOUT=30
SERVICE_CHECK_INTERVAL=5
NETWORK_INTERFACE=docker0
CAPTURE_DURATION=300

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set to 'true' to enable authentication for services
ENABLE_AUTH=false
# Set to 'true' to enable SSL/TLS
ENABLE_SSL=false
# Set to 'true' to enable network isolation
ENABLE_ISOLATION=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
AUTO_BACKUP=true
BACKUP_INTERVAL=3600
MAX_BACKUPS=10
